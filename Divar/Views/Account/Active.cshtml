@model Divar.Core.ViewModels.ActiveViewModel

@{
    ViewData["Title"] = "فعالسازی";
}

<div class="container">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

            <h4 class="text-center">حساب خود را فعال کنید</h4>

            <hr />
            <form asp-action="Active">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="Code" class="control-label"></label>*@
                    <input asp-for="Code" class="form-control", placeholder="کد فعالسازی" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="فعالسازی" class="btn-red pull-right" />
                    <a asp-action="Login" class="btn-red pull-left">ورود</a>
                </div>
            </form>
        </div>
    </div>

</div>

