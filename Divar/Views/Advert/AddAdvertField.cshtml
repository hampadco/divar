@model Divar.Core.ViewModels.AddAdvertFieldViewModel

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAdvertField">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="FieldId" class="control-label"></label>*@
                @Html.DropDownList("FieldId", null, htmlAttributes: new { @class = "form-control"})
            </div>
            <div class="form-group">
                @*<label asp-for="Value" class="control-label"></label>*@
                <input asp-for="Value" class="form-control", placeholder="مقدار" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت ویژگی" class="btn-red" />
            </div>
        </form>
    </div>
</div>
