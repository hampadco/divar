@model Divar.Core.ViewModels.AdvertViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

            <h4 class="text-center">آگهی خود را رایگان ثبت کنید</h4>

            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.DropDownList("CityId", null, htmlAttributes: new { @class = "form-control"})
                </div>
                <div class="form-group">
                    @*<label asp-for="Name" class="control-label"></label>*@
                    <input asp-for="Name" class="form-control", placeholder="عنوان آگهی" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Des" class="control-label"></label>*@
                    <textarea asp-for="Des" class="form-control", placeholder="توضیحات"></textarea>
                    <span asp-validation-for="Des" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ثبت آگهی" class="btn-red btn-block" />
                </div>
            </form>
        </div>
    </div>

</div>
