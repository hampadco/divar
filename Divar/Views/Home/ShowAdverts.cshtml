@model IEnumerable<Divar.DataAccessLayer.Entities.Advert>

@{
    ViewData["Title"] = "ShowAdverts";
}

<div class="container-fluid">

    <div class="row">

        @if (ViewBag.MyCount == 0)
        {
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">

                <div class="alert alert-danger text-center">
                    <h5 class="text-center">در حال حاضر آگهی برای این شهر وجود ندارد</h5>
                </div>

            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-3 col-sm-2 col-xs-12">

                    <div class="thumbnail">

                        @(await Component.InvokeAsync("FirstImageComponent", item.Id))

                        <div class="caption">

                            <h3 class="text-center">@item.Name</h3>
                            <h5 class="text-center">@item.Date</h5>
                            <a href="/Home/Adverts/@item.Id?title=@item.Name.Replace(" ", "-").ToString()" class="btn-red btn-block text-center">نمایش جزئیات</a>
                        </div>

                    </div>

                </div>
            }
        }

    </div>

    @if (ViewBag.MyCount != 0)
    {
        <div class="row text-center">

            <div class="pageination">

                @for (int i = 1; i < ViewBag.PageCount; i++)
                {
                    <a class="@(((int)ViewBag.PageId == i)?"active":"")" href="/Home/ShowAdverts/@ViewBag.CityId?pageNumber=@i">@i</a>
                }

            </div>

        </div>
    }

</div>

