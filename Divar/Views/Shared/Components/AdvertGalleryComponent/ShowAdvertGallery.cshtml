@model IEnumerable<Divar.DataAccessLayer.Entities.Gallery>

@{
    Layout = null;

    int counter = 1;
}

<link href="~/css/gallery.css" rel="stylesheet" />

<div class="container col-lg-12 col-md-12 col-sm-12 col-xs-12">

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="mySlides">
                <img src="~/images/adverts/@item.Img" alt="" style="width: 80%" />
            </div>
        }

        <div class="mg-top-20">

            @foreach (var item in Model)
            {
                <div class="column">
                    <img src="~/images/adverts/@item.Img" alt="" class="demo cursor" onclick="currentSlides(@counter)" style="width: 100%" />
                </div>

                counter += 1;
            }

        </div>
    }
    else
    {
        <div class="mySlides">
            <img src="~/images/default.png" alt="" style="width: 80%" />
        </div>
    }

</div>

<script src="~/js/gallery.js"></script>

