@model IEnumerable<Divar.DataAccessLayer.Entities.Mark>

@{
    Layout = null;
}

<div class="container-fluid">

    <div class="row">

        @if (Model.Count() == 0)
        {
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">

                <div class="alert alert-danger text-center">
                    <h5 class="text-center">در حال حاضر هیچ آگهی را نشان نکرده اید</h5>
                </div>

            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-3 col-sm-2 col-xs-12">

                    <div class="thumbnail">

                        @(await Component.InvokeAsync("FirstImageComponent", item.Advert.Id))

                        <div class="caption">

                            <h3 class="text-center">@item.Advert.Name</h3>
                            <h5 class="text-center">@item.Advert.Date</h5>
                            <br />
                            <a href="/Home/Adverts/@item.Advert.Id?title=@item.Advert.Name.Replace(" ", "-").ToString()" class="btn-red col-lg-6 text-center">نمایش جزئیات</a>
                            <a asp-action="RemoveMark" asp-controller="Advert" asp-route-id="@item.Id" class="btn-light col-lg-6 text-center">حذف</a>
                        </div>

                    </div>

                </div>
            }
        }

    </div>

</div>
